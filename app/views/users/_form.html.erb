<%= form_with(model: user, local: false) do |form| %>
  <div class="modal-body">
    <div id="errorArea"></div>

    <div class="form-group mt-3">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group mt-3">
      <%= form.label :email %>
      <%= form.text_field :email, class: 'form-control' %>
    </div>

    <div class="form-group mt-3">
      <%= form.label :address %>
      <%= form.text_field :address, class: 'form-control' %>
    </div>

    <div class="form-group mt-3">
      <%= form.label :contact %>
      <%= form.text_field :contact, class: 'form-control' %>
    </div>
    <h2>Items</h2>

  <div id="items">
    <%= form.fields_for :items do |item_form| %>
      <%= render 'item_fields', f: item_form %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'Add item', form, :items, class: 'btn btn-secondary' %>
    </div>
  </div>

  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary btn-lg close-modal" data-bs-dismiss="modal">Close</button>    
    <%= form.submit class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
